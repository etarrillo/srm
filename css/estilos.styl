$orange-bcp = #EC8312
$blue-bcp = #004785
$skyblue-bcp = #0099CC
$plomo-bcp = #666666
$blanco-bcp = #ffffff

@import 'alert.styl'
//mixins
border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  -ms-border-radius arguments
  -o-border-radius arguments
  border-radius arguments


body
	background-color $blanco-bcp
	background-image url('../images/bg_general.jpg')
	background-repeat no-repeat
	background-position 0px 255px
	font-family 'flexolight'

// from http://nicolasgallagher.com/micro-clearfix-hack/

h1
	font-size 20px
h2
	font-size 17px
h3
	font-size 15px
h4
	font-size 14px


.clearfix
	zoom 1
	&:after
	&:before
		content ""
		display table
	&:after
		clear both

//MINI FRAMEWORK TABLES
.ancho-10
	width 10%
.ancho-20
	width 20%
.ancho-30
	width 30%
.ancho-40
	width 40%
.ancho-50
	width 50%
.ancho-60
	width 60%
.ancho-70
	width 70%
.ancho-80
	width 80%
.ancho-90
	width 90%
.ancho-100
	width 100%

//Color texto
.txt-orange-bcp
	color $orange-bcp
.txt-blue-bcp
	color $blue-bcp
.txt-skyblue-bcp
	color $skyblue-bcp
.txt-plomo-bcp
	color $plomo-bcp
	
.table-color-1
	background-color $blue-bcp
	color $blanco-bcp
.table-color-2
	background-color #E6E8F1
	color $blue-bcp
	a
		color $blue-bcp
		font-size 12px
		font-weight bold
		&:hover
			text-decoration none

//clases generales
.icon-orange
	background-image url('../images/icon-orange.png')
	background-repeat no-repeat
	background-position 10px center
	padding-left 25px

.icon-skyblue
	background-image url('../images/icon-skyblue.png')
	background-repeat no-repeat
	background-position 10px center
	padding-left 25px
.icon-mail
	background-image url('../images/icon-mail.png')
	background-repeat no-repeat
	background-position 1px 1px
	padding-left 20px
	margin-right 5px
.stripe
	display block
	padding 5px
	margin-bottom 5px

.white
	background-color #ffffff
	
.strong-txt
	font-weight bold

.side-left
	float left 

.side-right
	float right 

.contenedor
	margin 0 auto
	width 800px
	height 100%
	padding 0 5px 5px 5px

// Cabecera
#side-up
	background-color $blue-bcp
	width 99%
	margin-bottom 10px
	padding 0.5%
#cabecera
	height 120px
	
#user-data,
a
	font-size 14px
	color $plomo-bcp
	text-align right

#user-data
	margin 0 10px 0 0
	p
		margin 7px 0
	a
		display block
		margin 4px 0
		text-decoration none
		color 
		&:hover
			text-decoration underline
#user-pic
	img
		border 5px solid #ededed
// Men√∫
nav
	ul
		display block
		text-align right
		margin 0
		li
			display inline-block
			a
				display inline-block
				color $blanco-bcp
				padding 7px 10px
				background-color $orange-bcp
				text-decoration none
				border-radius 5px
				font-size 12px
				&:hover
					background-color $blue-bcp

#submenu
	margin-top 10px
	nav
		ul
			text-align left
			margin 0
			padding 0
			li
				a
					padding 5px!important
					background-color transparent!important
					color $blue-bcp
					font-size 12px
					font-weight bold
					border-radius 0!important
					&:hover
						text-decoration underline
//contenido
.contenedor
	#box-title
		h1
			color $blue-bcp

		h2
			background-color $orange-bcp
			color $blanco-bcp
			font-style italic
			font-weight normal
			margin-bottom 0
			padding 7px
		h3
			border-bottom 1px solid $orange-bcp
			border-left 1px solid $orange-bcp
			border-right 1px solid $orange-bcp
			font-size 13px
			margin 0
			padding 5px

	form
		fieldset
			border none
		h3
			margin 0
			color $skyblue-bcp
			padding 5px
			font-weight normal

		h4,
		label
			font-size 13px
			font-weight bold
			color $blue-bcp
			width 20%
			display inline-block
			vertical-align middle
		select
			width 75%
			display inline-block
			vertical-align middle
			max-width 600px
			padding 5px
		input[type="submit"]
			background-color #EC8312
			color $blanco-bcp
			font-size 12px
			font-weight bold
			border none
			padding 5px 10px
			margin-left 15px
			margin-bottom 10px
			&:hover
				background-color $blue-bcp

		.group-input
			margin-bottom 10px
			display inline-block
			label
				width 100px
				color $plomo-bcp
			input[type="text"]
				width 170px
			input[type="radio"]
				width 30px

	#reporte
		margin-top 10px
		margin-bottom 10px
		border-bottom 1px solid $orange-bcp
		input[type="text"]
			padding 5px
			font-size 13px


//TABLAS DE INFORMES

table
	width 100%
	thead
		tr
			border-bottom 1px solid $blanco-bcp
			th
				padding 5px
				border 1px solid $blanco-bcp
				font-size 12px
	tbody
		tr
			border-bottom 1px solid $blanco-bcp
			td
				padding 5px
				border 1px solid $blanco-bcp
				font-size 12px

ul#paginacion
	text-align center
	li
		display inline-block
		a
			transition all 0.2s ease-in-out
			border-radius 3px
			display inline-block
			padding 5px 7px
			background-color $orange-bcp
			color $blanco-bcp
			text-decoration none
			font-size 12px
			&:hover
				background-color $blue-bcp
		a.active,
		span.active
				background-color $blue-bcp
				
ol
	li
		font-size 13px
		border-bottom 1px solid $orange-bcp
		padding 5px
		&:hover
			background-color $blanco-bcp
		a.mail
			font-size 10px
		a
			color $blue-bcp
			font-size 13px
			text-decoration none
			text-transform uppercase
			text-align left
			&:hover
				background-color $blanco-bcp
				color $blue-bcp
				
.block-title
	h3
		color $blanco-bcp!important
		background-color $blue-bcp
		border none!important
		font-weight 600!important
#bloque-admin
	margin-top 20px
	aside
		padding 5px
		.content-block
			background-color #ededed
			margin-top 5px
			h3
				background-color $blue-bcp
				border none
				color $blanco-bcp
			ul
				li
					list-style none
					a
						display block
						padding 5px
						text-align left
						text-decoratiion none
						&:hover
							text-decoration underline
#leyenda
	h4
		display block
	span
		display block
		color $plomo-bcp
		font-size 13px
		margin-left 30px
#content-admin
	margin-top 20px
	section
		padding 5px
	table
		margin-top 15px
//footer
footer
	p
		color $plomo-bcp
		font-size 13px