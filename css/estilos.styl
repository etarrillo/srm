$orange-bcp = #EC8312
$blue-bcp = #004785
$bluesky-bcp = #0099CC
$plomo-bcp = #666666

@import 'alert.styl'
//mixins
border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  -ms-border-radius arguments
  -o-border-radius arguments
  border-radius arguments


body
	background-color #ffffff
	background-image url('../img/bg_general.jpg')
	background-repeat no-repeat
	background-position 0px 230px
	font-family 'flexolight'

// from http://nicolasgallagher.com/micro-clearfix-hack/

h1
	font-size 20px
h2
	font-size 17px
h3
	font-size 15px
h4
	font-size 14px


.clearfix
	zoom 1
	&:after
	&:before
		content ""
		display table
	&:after
		clear both
//clases generales
.icon-orange
	background-image url('../img/icon-orange.png')
	background-repeat no-repeat
	background-position 10px center
	padding-left 25px

.icon-skyblue
	background-image url('../img/icon-skyblue.png')
	background-repeat no-repeat
	background-position 10px center
	padding-left 25px

.stripe
	display block
	padding 10px
	margin-bottom 5px
.white
	background-color rgba(255,255,255,0.5)
.strong-txt
	font-weight bold

.side-left
	float left 

.side-right
	float right 

.contenedor
	margin 0 auto
	width 100%
	max-width 800px
	height 100%
	padding 5px

// Cabecera
#side-up
	background-color $blue-bcp
	width 99%
	margin-bottom 10px
	padding 0.5%

#user-data,
a
	font-size 14px
	color $plomo-bcp
	text-align right

#user-data
	margin 0 10px 0 0
	p
		margin 7px 0
	a
		display block
		margin 4px 0
		text-decoration none
		color 
		&:hover
			text-decoration underline
#user-pic
	img
		border 5px solid #ededed
// Men√∫
nav
	ul
		display block
		text-align right
		margin 0
		li
			display inline-block
			a
				display inline-block
				color #ffffff
				padding 7px 10px
				background-color $orange-bcp
				text-decoration none
				border-radius 5px
				font-size 12px
				&:hover
					background-color $blue-bcp

//contenido
.contenedor
	#box-title
		h1
			color $blue-bcp

		h2
			background-color $orange-bcp
			color #ffffff
			font-style italic
			font-weight normal
			margin-bottom 0
			padding 7px
		h3
			border-bottom 1px solid $orange-bcp
			border-left 1px solid $orange-bcp
			border-right 1px solid $orange-bcp
			color $plomo-bcp
			font-size 13px
			margin 0
			color $bluesky-bcp
			padding 5px

	form
		fieldset
			border none
		h3
			margin 0
			color $bluesky-bcp
			padding 5px
			font-weight normal

		h4,
		label
			font-size 13px
			font-weight bold
			color $blue-bcp
			width 20%
			display inline-block
			vertical-align middle
		select
			width 75%
			display inline-block
			vertical-align middle
			max-width 600px
			padding 5px
		input[type="submit"]
			background-color #EC8312
			color #ffffff
			font-size 12px
			font-weight bold
			border none
			padding 5px 10px
			margin-left 15px
			margin-bottom 10px
			&:hover
				background-color $blue-bcp


		.group-input
			margin-bottom 10px
			display inline-block
			label
				width 100px
				color $plomo-bcp
			input[type="text"]
				width 170px
			input[type="radio"]
				width 30px

//footer
footer
	p
		color $plomo-bcp
		font-size 13px